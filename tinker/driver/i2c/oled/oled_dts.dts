/*-------------------- way 1: of get gpio start ------------------------*/
// 0.91 inch oled 128x64
&i2c1 {
    oled: ss1306@7b {
        compatible = "oled, ssd1306";
        clock-frequency = <200000>;
        ret = <0x7b>;
        width = <128>;
        height = <64>;
        oled-rst = <&gpio6 RK_PA1 GPIO_ACTIVE_HIGH>;  // GPIO6A1
        page-offset = <0>;
        status = "okay";
    };
};
/*-------------------- way 1: of get gpio end ------------------------*/


/*-------------------- way 2: pinctrl start ------------------------*/
// 2 --------------- pinctrl way -----------
// 0.91 inch oled 128x64

oled-rst {
        compatible = "oled-pins";
        label = "oled-rst-pins";
        pinctrl-name = "default",
                        "rst_low";
        // GPIO6A1
        pinctrl-0 = <&oled_rst_high>;
        pinctrl-1 = <&oled_rst_low>;
        status = "okay";
};

&i2c1 {
    oled: ss1306@7b {
        compatible = "oled, ssd1306";
        clock-frequency = <200000>;
        ret = <0x7b>;
        width = <128>;
        height = <64>;
        page-offset = <0>;

        status = "okay";
    };
};

&pinctrl {
    // GPIO6A1
    oled_rst_high: oled-rst-high {
        pins = <RK_GPIO6 RK_PA1 RK_FUNC_GPIO &pcfg_pull_up>;
        // slew-rate = <1>;
        output-high;
    };
    oled_rst_low: oled-rst-low {
        pins = <RK_GPIO6 RK_PA1 RK_FUNC_GPIO &pcfg_pull_down>;
        // slew-rate = <1>;
        output-low;
    };
}
/*-------------------- way 2: pinctrl end ------------------------*/
