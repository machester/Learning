&i2c0 {
    hym8536@51 {
		compatible = "rtc,hym8563";
		status = "disabled";
		reg = <0x51>;
        irq_gpio = <&gpio8 RK_PA7 GPIO_ACTIVE_LOW>;
    };
};
&i2c1 {
	status = "okay";
	clock-frequency = <400000>; // decode chip i2c speed max 100KHz
    
	stk8b@18 {
		compatible = "gs_stk8baxx";
		status = "disabled";
		reg = <0x18>;
        type = <SENSOR_TYPE_ACCEL>;
        irq-gpio = <&gpio8 RK_PA0 GPIO_ACTIVE_HIGH>;
        irq_enable = <0>;
        poll_delay_ms = <200>;
        layout = <7>;
	};
};

&i2c4 {
	status = "okay";
	clock-frequency = <400000>;
    
	ilitek@41 {
        compatible = "tchip,ilitek";
        status = "disabled";
        reg = <0x41>;
        screen_max_x = <1080>;
        screen_max_y = <1920>;
        ilitek,irq-gpio = <&gpio7 6 IRQ_TYPE_LEVEL_LOW>;
        ilitek,reset-gpio = <&gpio7 5 GPIO_ACTIVE_HIGH>;
    };
};

&i2c5 {
	status = "okay";
	clock-frequency = <400000>;
};

&pinctrl {
    buttons {
		pwrbtn: pwrbtn {
			rockchip,pins = <0 5 RK_FUNC_GPIO &pcfg_pull_up>;
		};
	};
};
