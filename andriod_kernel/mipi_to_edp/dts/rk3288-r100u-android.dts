/ {
	compatible = "rockchip,rk3288-evb-android-rk808-edp", "rockchip,rk3288";
   /** start : default system power-key -----------------------------------------------*/
    rk_key: rockchip-key {
    		compatible = "rockchip,key";
    		status = "okay";
    		power-key {
    			gpios = <&gpio0 5 GPIO_ACTIVE_LOW>;      // system default power key port
    			linux,code = <116>;
    			pinctrl-names = "default";
    			pinctrl-0 = <&pwrbtn>;
    			label = "power";
    			gpio-key,wakeup;
    		};
    	};
    /** end : default system power-key -----------------------------------------------*/
    /** start : mcu power off control -----------------------------------------------*/
    // mcu_key: mcu-key {
    //     compatible = "rockchip,r100u-mcu-key";
    //     status = "okay";
    //     mcu-p53-gpio = <&gpio0 RK_PB6 GPIO_ACTIVE_HIGH>;
    //     mcu-p42-gpio = <&gpio8 RK_PA6 GPIO_ACTIVE_HIGH>;
    // };
    /** end : mcu power off control ------------------------------------------------*/
    leds {
        compatible = "gpio-leds";
        status = "okay";
        led0:led-control {
            label = "led_control";
            gpios = <&gpio0 RK_PA1 GPIO_ACTIVE_LOW>;
            default-state = "on";
            linux,default-trigger = "heartbeat";
        };
    };
};

&pwm2 {
    status = "okay";
    compatible = "rockchip,remotectl-pwm";
    pinctrl-names = "default";          // change default active to default
    pinctrl-0 = <&pwm2_pin>;
    // pinctrl-0 = <&pwm3_pin>;
    remote_pwm_id = <2>;
    handle_cpu_id = <1>;
    interrupts = <GIC_SPI 78 IRQ_TYPE_LEVEL_HIGH>;
    remote_support_psci = <1>;
    // ir_key0 {   // invert code, rockchip default mode
    //     rockchip,usercode = <0x7F80>;
    //     // rockchip,usercode = <0x4040>;
    //     rockchip,key_table =
    //         <0xED   KEY_POWER>,
    //         <0xFB   KEY_MENU>,
    //         <0xF9   KEY_BACK>,
    //         <0xFE   KEY_HOMEPAGE>,
    //         <0xF1   KEY_VOLUMEUP>,
    //         <0xF3   KEY_VOLUMEDOWN>,
    //         <0xFA   KEY_UP>,
    //         <0xE4   KEY_DOWN>,
    //         <0xF8   KEY_LEFT>,
    //         <0xF7   KEY_ENTER>,
    //         <0xF6   KEY_RIGHT>;
    // };  
    ir_key1 {   // uninvert code
    rockchip,usercode = <0x7F80>;
        rockchip,key_table =
            <0x12   KEY_POWER>,
            <0x04   KEY_MENU>,
            <0x06   KEY_BACK>,
            <0x01   KEY_HOMEPAGE>,
            <0x0E   KEY_VOLUMEUP>,
            <0x0C   KEY_VOLUMEDOWN>,
            <0x05   KEY_UP>,
            <0x1B   KEY_DOWN>,
            <0x07   KEY_LEFT>,
            <0x08   KEY_ENTER>,
            <0x09   KEY_IR_POWER>;
            // <0x09   KEY_RIGHT>;
    };  
	ir_key2 {
		rockchip,usercode = <0xff00>;
		rockchip,key_table =
            <0xEF  KEY_POWER>,
            <0xFE  KEY_VOLUMEUP>,
            <0xFD  KEY_DELETE>,
            <0xF8  KEY_VOLUMEDOWN>,
            <0xE8  KEY_UP>,
            <0xE5  KEY_LEFT>,
            <0xE4  KEY_ENTER>,
            <0xE0  KEY_DOWN>,
            <0xBE  KEY_MENU>,
            <0xA6  KEY_RIGHT>,
            <0x5A  KEY_BRIGHTNESSDOWN>,
            <0xA3  KEY_BACK>,
            <0x5F  KEY_BRIGHTNESSUP>;
	};
};

